<style>
  .space {
    margin-right: 50px;
  }
  a{
   text-align: center;
  }
</style>
<div class="container d-flex justify-content-center align-items-center vh-100">
  {{!-- show all expenses link --}}
   <a href="/expenses">Show All Expenses</a>
  <div class="col-md-5 space">
    {{!-- flash messages --}}
    <p style="color: green;" class="green">{{messages.success}}</p>
    <p style="color: red;" class="red">{{messages.error}}</p>
    <br>
    <h2 class="text-center">Add Expenses</h2>
    <form action="/" method="POST">
      <div class="form-group">
        <label for="description">Description:</label>
        <input type="text" id="description" name="description" class="form-control">
      </div>
      
      <div class="form-group">
        <label for="amount">Amount:</label>
        <input type="text" id="amount" name="amount" class="form-control">
      </div>
      <div class="form-group">
        <label>Category:</label>
        <div>
          {{#each display_categories}}
            <div class="form-check">
              <input type="radio" id="{{this.category_type}}" name="category" value="{{this.category_type}}">
              <label for="{{this.category_type}}">{{this.category_type}}</label>
            </div>
          {{/each}}
        </div>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
      {{!-- <h6>Total Expences <span>R{{totalAmount}}</span></h6> --}}
    </form>
  </div>
<div class="col-md-5 space">
  <h5>Categories and Totals</h5>
  <table class="table">
    <thead class="thead-light">
      <tr>
        <th>Category</th>
        <th>Total</th>
      </tr>
    </thead>
    <tbody>
      {{#each cat_total}}
        <tr>
          <td>{{this.category_type}}</td>
          <td>
            R{{this.total_amount}}
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
</div>
<script>
  setTimeout(function () { document.querySelector('.red').innerHTML = ''; },
  3000);
   setTimeout(function () { document.querySelector('.green').innerHTML = ''; },
  3000);
</script> 


  
  
  